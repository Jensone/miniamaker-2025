{% extends 'base.html.twig' %}

{% block title %}Compl√©tez votre profil{% endblock %}

{% block body %}
<div class="vh-100 center">
    <form action={{ path('app_complete') }} method="post" class="border rounded p-3">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="form-group">
            <label for="username" class="form-label">Nom d'utilisateur</label>
            <input type="text" class="form-control" id="username" name="username" value="{{ app.user.username ?? '' }}">
        </div>
        <div class="form-group">
            <label for="fullname" class="form-label">Nom complet</label>
            <input type="text" class="form-control" id="fullname" name="fullname" value="{{ app.user.fullname ?? '' }}">
        </div>
    </form>
</div>

{% endblock %}